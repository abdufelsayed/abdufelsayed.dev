---
import { Github, Linkedin, Network, Rss } from "lucide-preact";
import { GITHUB_HANDLE, LINKEDIN_HANDLE, X_HANDLE } from "@/consts";
import { buttonVariants } from "@/lib/button-utils";
import { cn } from "@/lib/utils";

const today = new Date();
---

<div class="border-t bg-background py-2">
  <footer
    class="container mx-auto flex max-w-3xl items-center justify-between px-4"
  >
    <p class="text-sm">&copy; {today.getFullYear()} Abdullah Elsayed</p>
    <div class="flex items-center">
      <a
        href=`https://x.com/${X_HANDLE}`
        target="_blank"
        class={cn(buttonVariants({ variant: "ghost", size: "icon" }), "h-8 w-8")}
      >
        <svg
          class="size-3 fill-foreground"
          role="img"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><title>X</title><path
            d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
          ></path></svg
        >
        <span class="sr-only">X</span>
      </a>
      <a
        href=`https://linkedin.com/in/${LINKEDIN_HANDLE}`
        target="_blank"
        class={cn(buttonVariants({ variant: "ghost", size: "icon" }), "h-8 w-8")}
      >
        <Linkedin class="size-3" />
        <span class="sr-only">LinkedIn</span>
      </a>
      <a
        href=`https://github.com/${GITHUB_HANDLE}`
        target="_blank"
        class={cn(buttonVariants({ variant: "ghost", size: "icon" }), "h-8 w-8")}
      >
        <Github class="size-3.5" />
        <span class="sr-only">Github</span>
      </a>
      <a
        href="/rss.xml"
        target="_blank"
        class={cn(buttonVariants({ variant: "ghost", size: "icon" }), "h-8 w-8")}
      >
        <Rss class="size-3.5" />
        <span class="sr-only">RSS</span>
      </a>
      <a
        href="/sitemap-index.xml"
        target="_blank"
        class={cn(buttonVariants({ variant: "ghost", size: "icon" }), "h-8 w-8")}
      >
        <Network class="size-3.5" />
        <span class="sr-only">Sitemap</span>
      </a>
    </div>
  </footer>
</div>
