---
import { Image } from "astro:assets";
import alazharIcon from "@/assets/logos/alazhar.png";
import nileIcon from "@/assets/logos/nu.png";
import uobIcon from "@/assets/logos/uob.jpg";

const education = [
  {
    institution: "University of Birmingham",
    degree: "MEng in Computer Science and Software Engineering",
    period: "Sep 2019 - June 2023",
    location: "Birmingham, UK",
    classification: "First-Class Honors",
    icon: uobIcon,
  },
  {
    institution: "Nile University",
    degree: "BSc in Computer Engineering",
    degreeNote: "transferred without degree",
    period: "Sep 2017 - June 2019",
    location: "Giza, Egypt",
    gpa: "3.75",
    icon: nileIcon,
  },
  {
    institution: "Al-Azhar University",
    degree: "Bachelor of Medicine and Surgery",
    degreeNote: "transferred without degree",
    period: "Sep 2016 - June 2017",
    location: "Cairo, Egypt",
    note: "Pursued medicine because my dad wanted me to be a doctor. Plot twist: I chose to debug code instead of diagnosing patients.",
    icon: alazharIcon,
  },
];
---

<div class="space-y-8">
  <h2 class="text-2xl font-bold">Education</h2>
  <ul class="space-y-6">
    {
      education.map((edu) => (
        <li class="flex items-start gap-3">
          <div class="shrink-0 w-10 h-10 rounded-lg overflow-hidden">
            {edu.icon ? (
              <Image
                src={edu.icon}
                alt={`${edu.institution} logo`}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full bg-muted flex items-center justify-center text-sm font-medium">
                {edu.institution.charAt(0)}
              </div>
            )}
          </div>
          <div class="min-w-0 flex-1 space-y-1">
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0 flex-1">
                <div class="font-medium text-base">{edu.institution}</div>
                <div class="text-sm mt-0.5">
                  {edu.degree}
                  {edu.degreeNote && (
                    <span class="text-muted-foreground">
                      {" "}
                      ({edu.degreeNote})
                    </span>
                  )}
                </div>
              </div>
              <div class="text-right shrink-0">
                <div class="text-xs text-muted-foreground">{edu.location}</div>
                <div class="text-xs text-muted-foreground mt-0.5">
                  {edu.period}
                </div>
              </div>
            </div>

            {edu.classification && (
              <div class="text-xs">
                <span class="font-medium">Classification:</span>{" "}
                {edu.classification}
              </div>
            )}

            {edu.gpa && (
              <div class="text-xs">
                <span class="font-medium">GPA:</span> {edu.gpa}
              </div>
            )}

            {edu.note && (
              <div class="text-xs text-muted-foreground italic">{edu.note}</div>
            )}
          </div>
        </li>
      ))
    }
  </ul>
</div>
